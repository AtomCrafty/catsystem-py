{
  "comments": {
    // symbol used for single line comment. Remove this entry if your language does not support line comments
    "lineComment": "//",
    // symbols used for start and end a block comment. Remove this entry if your language does not support block comments
    //TODO: Are these supported in CatSystem 2 language files?
    "blockComment": [ "/*", "*/" ]
  },
  // symbols used as brackets
  "brackets": [
    ["<", ">"],
    ["{", "}"],
    ["(", ")"],
    ["[", "]"]
  ],
  // symbols that are auto closed when typing
  "autoClosingPairs": [
    ["<", ">"],
    ["{", "}"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    //TODO: Is this a good idea to make these auto-closing?
    // language*.txt
    ["$", "$"],
    // gamelangtbl*.txt
    ["#", "#"]
  ],
  // symbols that that can be used to surround a selection
  "surroundingPairs": [
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    //TODO: Is this a good idea to make these auto-surrounding?
    // language*.txt
    ["$", "$"],
    // gamelangtbl*.txt
    ["#", "#"]
  ],
  "folding": {
    "markers": {
      "start": "^#\\w+",
      "end": "\\n(?=#\\w+)"
    },
    "offSide": false
  },
  "indentationRules": {
    "increaseIndentPattern": "^#\\w+[ \t]*$",
    "decreaseIndentPattern": "^#\\w+[ \t]*$"
  }
}